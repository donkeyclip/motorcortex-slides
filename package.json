{
  "name": "@donkeyclip/motorcortex-slides",
  "version": "1.0.23",
  "description": "Slides plugin for MotorCortex",
  "main": "dist/motorcortex-slides.cjs.js",
  "module": "dist/motorcortex-slides.esm.js",
  "browser": "dist/motorcortex-slides.umd.js",
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/donkeyclip/motorcortex-slides.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.2"
  },
  "scripts": {
    "update-force:packages": "./node_modules/npm-check-updates/bin/ncu -u && npm i",
    "update:packages": "npm update --save/--save-dev",
    "concurrently": "concurrently -c \"cyan.bold,magenta.bold\" --names \"JS,Styles\"",
    "lint:styles": "stylelint  \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json",
    "lint:js": "eslint -c .eslintrc src/**/*.js",
    "lint": "npm run concurrently \"npm run lint:js\" \"npm run lint:styles\"",
    "lint:fix": "npm run concurrently  \"npm run lint:js -- --fix\" \"npm run lint:styles -- --fix\"",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build:lib && concurrently -c \"cyan.bold,magenta.bold\" \"npm:build:lib -- -w\"  \"npm:start:demo\" ",
    "start:demo": "webpack serve --config ./demo/webpack.config.js --mode=development --progress ",
    "build:demo": "webpack --mode=production --config ./demo/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "prepare": "husky install"
  },
  "keywords": [
    "motorcortex",
    "animation"
  ],
  "lint-staged": {
    "linters": {
      "*.json": [
        "prettier --write",
        "git add"
      ],
      "*.{css,scss}": [
        "stylelint  \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json --fix",
        "git add"
      ],
      "*.{js,jsx}": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@donkeyclip/motorcortex": ">= 6.4.1 < 8",
    "@donkeyclip/motorcortex-anime": ">= 2.1.16 < 3",
    "@kissmybutton/motorcortex-video": ">= 1.1.16 < 2"
  },
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "@commitlint/cli": "13.2.0",
    "@commitlint/config-conventional": "13.2.0",
    "@donkeyclip/motorcortex": "7.4.0",
    "@donkeyclip/motorcortex-anime": "^2.1.16",
    "@donkeyclip/motorcortex-player": "2.2.1",
    "@kissmybutton/motorcortex-video": "^1.1.17",
    "@rollup/plugin-json": "4.1.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.1",
    "@semantic-release/github": "7.2.3",
    "@semantic-release/npm": "7.1.3",
    "@size-limit/preset-big-lib": "5.0.4",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "babel-preset-es2015-node5": "1.2.0",
    "browserify": "^17.0.0",
    "browserslist": "^4.7.0",
    "caniuse-lite": "^1.0.30000997",
    "commitizen": "3.1.2",
    "concurrently": "4.1.2",
    "coveralls": "3.1.1",
    "css-loader": "3.6.0",
    "cz-conventional-changelog": "2.1.0",
    "es6-promise": "4.2.8",
    "eslint": "5.16.0",
    "eslint-config-prettier": "3.6.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "4.1.0",
    "exports-loader": "0.7.0",
    "husky": "^7.0.0",
    "imports-loader": "0.8.0",
    "json-stringify-safe": "5.0.1",
    "lint-staged": "8.2.1",
    "npm-check-updates": "*",
    "npx": "*",
    "prettier": "1.19.1",
    "rimraf": "2.7.1",
    "rollup": "2.53.2",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.3.1",
    "semantic-release": "17.4.7",
    "shelljs": "0.8.4",
    "size-limit": "5.0.4",
    "webpack": "5.53.0",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "3.11.2",
    "whatwg-fetch": "3.6.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:prod"
    }
  }
}
