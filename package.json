{
  "name": "@donkeyclip/motorcortex-slides",
  "version": "1.0.24",
  "description": "Slides plugin for MotorCortex",
  "main": "dist/motorcortex-slides.cjs.js",
  "module": "dist/motorcortex-slides.esm.js",
  "browser": "dist/motorcortex-slides.umd.js",
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/donkeyclip/motorcortex-slides.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.2"
  },
  "scripts": {
    "update-force:packages": "./node_modules/npm-check-updates/bin/ncu -u && npm i",
    "update:packages": "npm update --save/--save-dev",
    "concurrently": "concurrently -c \"cyan.bold,magenta.bold\" --names \"JS,Styles\"",
    "lint:styles": "stylelint  \"src/**.css\" \"src/**/*.scss\" --config .stylelintrc.json",
    "lint:js": "eslint -c .eslintrc src/**/*.js",
    "lint": "npm run concurrently \"npm run lint:js\" \"npm run lint:styles\"",
    "lint:fix": "npm run concurrently  \"npm run lint:js -- --fix\" \"npm run lint:styles -- --fix\"",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build:lib && concurrently -c \"cyan.bold,magenta.bold\" \"npm:build:lib -- -w\"  \"npm:start:demo\" ",
    "start:demo": "webpack serve --config ./demo/webpack.config.js --mode=development --progress ",
    "build:demo": "webpack --mode=production --config ./demo/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "prepare": "husky install"
  },
  "keywords": [
    "motorcortex",
    "animation"
  ],
  "lint-staged": {
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write",
      "stylelint  \"src/**.css\" --config .stylelintrc.json --fix"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@donkeyclip/motorcortex": "^7",
    "@donkeyclip/motorcortex-anime": ">= 2.1.16 < 3",
    "@kissmybutton/motorcortex-video": "^1"
  },
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.8",
    "@babel/preset-env": "7.15.8",
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@donkeyclip/motorcortex": "7.5.4",
    "@donkeyclip/motorcortex-anime": "2.1.16",
    "@donkeyclip/motorcortex-player": "2.3.5",
    "@kissmybutton/motorcortex-video": "1.2.0",
    "@rollup/plugin-json": "4.1.0",
    "@semantic-release/changelog": "6.0.0",
    "@semantic-release/git": "10.0.0",
    "@semantic-release/github": "8.0.1",
    "@semantic-release/npm": "8.0.0",
    "@size-limit/preset-big-lib": "5.0.5",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "babel-preset-es2015-node5": "1.2.0",
    "browserify": "17.0.0",
    "browserslist": "4.17.3",
    "caniuse-lite": "1.0.30001265",
    "commitizen": "4.2.4",
    "concurrently": "6.3.0",
    "coveralls": "3.1.1",
    "css-loader": "6.4.0",
    "cz-conventional-changelog": "3.3.0",
    "es6-promise": "4.2.8",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "4.1.0",
    "exports-loader": "3.0.0",
    "husky": "7.0.2",
    "imports-loader": "3.0.0",
    "json-stringify-safe": "5.0.1",
    "lint-staged": "11.2.2",
    "npm-check-updates": "*",
    "npx": "*",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "rollup": "2.58.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "18.0.0",
    "shelljs": "0.8.4",
    "size-limit": "5.0.5",
    "webpack": "5.58.1",
    "webpack-cli": "4.9.0",
    "webpack-dev-server": "4.3.1",
    "whatwg-fetch": "3.6.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:prod"
    }
  }
}
